      / | |        | |                Mensaje                |  |
      / | | New    | |                                       |  |
      / | | Record | +---------------------------------------+  |
      / | |        |                                            |
      / | ---------+ |Tags||Tags||Tags||Tags||Tags||Tags||Tags| |
      / +-------------------------------------------------------+

    
    = render :partial => 'pnsqs/maker_pnsq', :locals => {:pnsq => @pnsq}
