#user_container
  .user_block
    .name_user_block
      .user_row
        =image_tag(@user.avatar.url(:icon), :class => 'user_row_avatar')
        .user_row_principal_text="#{@user.nick.capitalize}"

        = render :partial => 'relations/follow', :locals => {:user => @user, :relation => @relation} 

        .connections_panel
          =link_to("#{@user.followers_count} Followers", relations_in_holder_user_path(@user.id, :role => 'followers'), :remote => true)
          =link_to("#{@user.following_count} Following", relations_in_holder_user_path(@user.id, :role => 'following'), :remote => true)

    .information_block
      - if !@pnsqs.blank?
        - for pnsq in @pnsqs
          = render :partial => 'pnsqs/pnsq_box', :locals => {:pnsq => pnsq} 
      - else
        .not_pnsq="Not Pnsqs Yet" 