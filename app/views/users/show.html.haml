#user_container
  .user_block
    .name_user_block
      = render :partial => 'users/user_row', :locals => {:user => @user, :relation => @relation}

    .information_block
      - if !@pnsqs.blank?
        - for pnsq in @pnsqs
          = render :partial => 'pnsqs/pnsq_box', :locals => {:pnsq => pnsq} 
      - else
        .not_pnsq="Not Pnsqs Yet"


  - if (user_next_step = UserNextStep.find_or_create_by(:user_id => current_user.id)) and (!user_next_step.user_show_help)
    :javascript
      $.getScript("#{user_next_step_user_path(current_user.id, :step => 'user_show_help')}")