#user_container
  .user_block
    -#La idea es que aquÃ­ vaya informacion del usuario (Foto y Nombre)
    .name_user_block
      .user_row
        =image_tag(@user.avatar.url(:icon), :class => 'user_row_avatar')
        .user_row_principal_text="#{@user.nick.capitalize}"

        = render :partial => 'relation/follow', :locals => {:user => @user} 

        .connections_panel
          .follow="#{@user.followers} Followers"
          .follow="#{@user.following} Following"

    .information_block
      - for pnsq in @pnsqs
        = render :partial => 'pnsq/pnsq_box', :locals => {:pnsq => pnsq} 