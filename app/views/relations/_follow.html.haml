- if !(current_user.id == user.id)
  - if (current_user.following?(user.id))
    .relation_tag{:id => "follow_#{user.id}"}
      .icon.icon-plus
      .label="Follow"

    :javascript
      $("#follow_#{user.id}").click(function() {
        $.post("#{relations_path(:user_id => current_user.id, :user_relation_id => user.id, :format => 'js')}");
      });
      
  - else
    .relation_tag{:style => 'background-color: #6A86C2; color: #FFF;'}
      .label="Following"