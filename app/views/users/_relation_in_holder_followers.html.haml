.window_header
  %h2="Seguidores"
.content_in_holder
  %table.relations_in_holder
    - if !relations.blank?
      - for relation in relations
        %tr
          %td.avatar
            =image_tag(relation.user.avatar.url(:icon))
          %td.name
            =link_to(relation.user.name, user_nick_path(relation.user.nick))
          %td.button
            = render :partial => 'relations/follow', :locals => {:user => relation.user, :relation => Relation.where(:user_id => current_user.id, :user_relation => relation.user).first} 
    - else
      .text="Sin seguidores todav√≠a"